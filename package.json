{
  "name": "llm-exam-evaluation-system",
  "version": "1.0.0",
  "description": "Büyük Dil Modeli (LLM) Kullanarak Açık Uçlu Sınav Sorularını Otomatik Değerlendirme Sistemi",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "npm run start:dev --prefix backend",
    "backend:build": "npm run build --prefix backend",
    "frontend:dev": "npm run dev --prefix frontend",
    "frontend:build": "npm run build --prefix frontend",
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend"
  },
  "keywords": [
    "llm",
    "llama3",
    "exam-evaluation",
    "ai",
    "education",
    "turkish"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}